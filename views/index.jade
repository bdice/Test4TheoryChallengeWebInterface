    script(src="js/jquery-1.11.0.js")
    // Bootstrap Core JavaScript
    script(src="js/bootstrap.min.js")
    // Plugin JavaScript
    script(src="js/jquery.easing.min.js")
    script(type="text/javascript", src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCP4TbEsEUGhIO9ZCyMKnTuzJPhlzR9twE&sensor=false")


    script(type="text/javascript", src="/socket.io/socket.io.js")
    script(type="text/javascript", src="/js/storyjs-embed.js")
    script(type="text/javascript", src="/js/timeline-min.js")

    script(type="text/javascript", src="/data/accelerators.js")
    script(type="text/javascript", src="/js/jquery.base64.min.js")
    script(type="text/javascript", src="/js/t4tc-monitor-index.js")
    style(type="text/css", src="/css/timeline.css")

    // Custom Theme JavaScript
    script(src="js/grayscale.js")



  